extends base

block content
  main.main
    .card-container

      each tour in tours
        .card
          .card__header
            .card__picture
              .card__picture-overlay &nbsp;
              img.card__picture-img(src='cover.jpg', alt='xyz')
            h3.heading-tertirary
              span= xyz

          .card__details
            h4.card__sub-heading= Easy 5-day tour
            p.card__text= summary
            .card__data
              svg.card__icon
                use(xlink:href='/img/icons.svg#icon-map-pin')
              span= description
            .card__data
              //- svg.card__icon
              //- use(xlink:href='/img/icons.svg#icon-calendar')
              span= xyz
            .card__data
              //- svg.card__icon
              //- use(xlink:href='/img/icons.svg#icon-flag')
              span= xyz
            .card__data
              //- svg.card__icon
              //- use(xlink:href='/img/icons.svg#icon-user')
              span= xyz people

          .card__footer
            p
              span.card__footer-value= 34
              | 
              span.card__footer-text per person
            p.card__ratings
              span.card__footer-value= 4.5
              | 
              span.card__footer-text= 5
            a.btn.btn--green.btn--small(href='/') Details